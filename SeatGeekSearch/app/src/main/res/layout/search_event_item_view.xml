<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="event" type="com.cjwilliams24680.seatgeeksearch.models.Event"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"/>

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@android:color/white"
            android:text="@{event.shortDateTime}"
            tools:text="4/17 8:30 PM"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="170dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{event.title}"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Giants vs Dodgers"/>

            <TextView
                style="@style/SubtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{event.venue.extendedAddress}"
                tools:text="San Francisco, CA"/>

            <TextView
                style="@style/BodyText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="@{event.stats.listingCount == 0 ? View.GONE : View.VISIBLE}"
                android:text="@{@string/x_listings_from_y_dollars(event.stats.listingCount, event.stats.lowestPrice)}"
                android:gravity="bottom"
                tools:text="50 listings from $7"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
